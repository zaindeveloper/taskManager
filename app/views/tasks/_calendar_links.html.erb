<div style="padding-right: 0px; ">
  <h3 style="font-weight: 700" id="date_time_heading">
    <%= Date.commercial(@year, @next_week_number , 1).strftime("%b %d")%> - <%= Date.commercial(@year, @next_week_number , 7).strftime("%b %d")%>, <%= @year %>
  </h3>
</div>
<div class=" col-md-4 row float-right" style="margin-bottom: 10px; margin-right: -100px;">
  <div class="col-md-4" >
    <input type='text' class="form-control datepicker-default" placeholder="Go to" id="start_date_time" style="margin-bottom: 10px;" />
  </div>
  <div class="col-md-2" > 
    <a href="<%= new_task_path()%>" data-remote= true data-toggle="modal" data-target="#task_form" class= "btn btn-success">Add</a>
  </div>
  <div class="col-md-2" >  
    <a href="/tasks?back=false&next=false&today=true&week_number=<%= current_week_number %>&year=<%= Date.today.cwyear %>"data-remote=”true” class="btn btn-success"data-remote=”true” class="btn btn-success" id="today_button">Today</a>
  </div>
  <div class="col-md-1" >
    <a href="/tasks?back=true&next=false&today=false&week_number=<%= @next_week_number %>&year=<%= @year %>"data-remote=”true” class="btn btn-success" data-remote=”true” class="btn btn-success" id="back_button"><</a>
  </div>
  <div class="col-md-1" >
    <a href="/tasks?back=false&next=true&today=false&week_number=<%= @next_week_number %>&year=<%= @year %>"data-remote=”true” class="btn btn-success" id="next_button">></a>
  </div>
</div>