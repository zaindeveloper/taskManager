<div class="redips-drag t1 " id="task<%= task.id %>"> 
  <div class="other_item" >
    <span style="font-weight: bold" id="task_id_title<%= task.id %>">Task# <%= task.id %> , <%= task.title %></span>
    <br ><span id="task_worked_hours<%= task.id %>"><%= task.total_worked_time %> worked</span><br>
  </div>
  <div style="width: 100%">
    <span>
      <a href="<%= edit_task_path(task.id) %>" class="btn btn-xs" data-remote="true" data-toggle="modal" data-target="#task_form">
        <i class="la la-edit"></i>
      </a>
    </span>
    <span>
      <%= link_to "<i class='la la-close'></i> ".html_safe,task_path(task.id, authenticity_token: form_authenticity_token),class: "btn btn-xs" ,:remote => true, 
        :method => :delete %>
    </span>
  </div>
</div>