<div class="modal-dialog " role="document">
  <div class="modal-content" id="permission_modal">
    <div class="modal-header ">
      <h4 class="modal-title" id="myModalLabel49">Task</h4>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
    <div class="modal-body">
      <div class="col-xl-12 col-md-12 col-12">
        <div class="card">
          <div class="card-content collapse show">
            <div class="card-body">
              <%= form_for(@task , html: { remote: true, multipart: true, :id => "jobForm" , class: "form"}) do |f| %>
                <%= f.hidden_field :user_id , value: current_user.id %>
                <div class="form-body">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label for="projectinput6">Title</label>
                        <%= f.text_field :title ,class: "form-control", placeholder: "Title",required: true %>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label for="projectinput1">Start Time</label>
                        <div class='input-group date datetimepicker' id="datetimepicker13">
                          <%= f.text_field :start_time ,class: "form-control datetimepick", placeholder: "Start Time",required: true %>   
                          <span class="input-group-addon datetimepicker-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label for="projectinput1">End Time</label>
                        <div class='input-group date datetimepicker' id="datetimepicker13">
                          <%= f.text_field :end_time ,class: "form-control datetimepick", placeholder:"End Time",required: true %>   
                          <span class="input-group-addon datetimepicker-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class=" float-right" style="margin-bottom: 10px; margin-right: -15px; padding-top: 20px;">
                    <button type="button" class="btn btn-danger mr-1" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success mr-1">Save</button>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  #permission_modal { height: auto;}
  .pac-container {z-index: 10000 !important;}
</style>